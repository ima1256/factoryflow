import React from "react";
import { Modal, Box } from "@mui/material";

export default function ShakeModal({ open, onClose, shake }) {
  return (
    <Modal open={open} onClose={onClose}>
      <Box
        className={shake ? "shake" : ""}
        sx={{
          width: 400,
          margin: "100px auto",
          backgroundColor: "white",
          padding: 2,
          borderRadius: 1,
          outline: "none",
        }}
      >
        <h2>Modal Title</h2>
        <p>Contenido del modal</p>
      </Box>
    </Modal>
  );
}

<Modal
  open={open}
  onClose={onClose}
  closeAfterTransition
  slots={{ backdrop: Backdrop }}
  aria-labelledby="machine-details-title"
  aria-describedby="machine-details-description"
  slotProps={{
    backdrop: {
      timeout: 300,
      style: { backgroundColor: "rgba(0, 0, 0, 0.4)" },
    },
  }}
>
  <Fade in={open} timeout={300}>
    <Box
      sx={{
        position: "absolute",
        top: "50%",
        left: "50%",
        transform: "translate(-50%, -50%)",
      }}
    >
      <Box className={shake ? "shake" : ""} sx={style}>
        {children}
      </Box>
    </Box>
  </Fade>
</Modal>;


import React, { useState } from 'react';
import ShakeModal from './ShakeModal';

export default function ParentComponent() {
  const [modalOpen, setModalOpen] = useState(false);
  const [modalShake, setModalShake] = useState(false);

  const triggerShake = () => {
    setModalShake(true);
    setTimeout(() => setModalShake(false), 500); // duraci贸n de la animaci贸n shake
  };

  return (
    <>
      <button onClick={() => setModalOpen(true)}>Abrir modal</button>
      <button onClick={triggerShake}>Temblar modal</button>

      <ShakeModal
        open={modalOpen}
        onClose={() => setModalOpen(false)}
        shake={modalShake}
      />
    </>
  );
}


const handleModalClose = () => {
  const hasMissingFields =
    !localMachine.name || !localMachine.technician || !localMachine.location;

  if (hasMissingFields) {
    setShake(true);
    // Quitar el shake tras la animaci贸n
    setTimeout(() => setShake(false), 500); // duraci贸n del shake
  } else {
    onClose(); // cierra el modal normalmente
  }
};
